{% extends 'blog/base_blog.html.twig' %}

{% block title %}{{ category.name }} - Blog SnapCode™ Agency{% endblock %}

{% block meta_description %}{{ category.description ? category.description : 'Découvrez tous les articles de la catégorie ' ~ category.name ~ ' sur le blog SnapCode™ Agency.' }}{% endblock %}

{% block meta_keywords %}{{ category.name }}, développement web, création site internet, SnapCode{% endblock %}

{% block body %}
<!-- Breadcrumb -->
<nav style="margin-bottom: 30px; padding: 15px 0; background: #f8f9fa; border-radius: 8px;">
    <div style="padding: 0 20px;">
        <a href="{{ path('app_home') }}" style="color: #2A4DD0; text-decoration: none;">Accueil</a>
        <span style="margin: 0 10px; color: #666;">/</span>
        <a href="{{ path('blog_index') }}" style="color: #2A4DD0; text-decoration: none;">Blog</a>
        <span style="margin: 0 10px; color: #666;">/</span>
        <span style="color: #666;">{{ category.name }}</span>
    </div>
</nav>

<!-- En-tête de catégorie -->
<div class="category-header" style="background: linear-gradient(135deg, #2A4DD0 0%, #1a3ba8 100%); color: white; padding: 40px; border-radius: 10px; margin-bottom: 40px; text-align: center;">
    <h1 style="margin-bottom: 15px; font-size: 32px;">
        <i class="fa fa-folder"></i> {{ category.name }}
    </h1>
    {% if category.description %}
    <p style="font-size: 18px; opacity: 0.9; margin: 0;">{{ category.description }}</p>
    {% endif %}
    <p style="margin-top: 15px; opacity: 0.8; font-size: 14px;">
        {{ posts|length }} article{{ posts|length > 1 ? 's' : '' }} dans cette catégorie
    </p>
</div>

<div class="blog-grid">
    <!-- Articles de la catégorie -->
    <div class="main-content">
        {% if posts|length > 0 %}
            <div class="blog-posts">
                {% for post in posts %}
                <article class="blog-post-card">
                    {% if post.featuredImage %}
                    <div class="post-image" style="height: 200px; background-image: url('{{ post.featuredImage }}'); background-size: cover; background-position: center;">
                    </div>
                    {% endif %}
                    <div style="padding: 25px;">
                        <div class="post-meta" style="margin-bottom: 15px; color: #666; font-size: 14px;">
                            <span><i class="fa fa-calendar"></i> {{ post.createdAt|date('d F Y') }}</span>
                            {% if post.users %}
                            <span style="margin-left: 15px;">
                                <i class="fa fa-user"></i> {{ post.users.prenom }} {{ post.users.nom }}
                            </span>
                            {% endif %}
                        </div>
                        <h3 style="margin-bottom: 15px; font-size: 20px; line-height: 1.4;">
                            <a href="{{ path('blog_show', {slug: post.slug}) }}" style="color: #333; text-decoration: none;">
                                {{ post.title }}
                            </a>
                        </h3>
                        <p style="color: #666; line-height: 1.6; margin-bottom: 20px;">
                            {{ post.content|striptags|slice(0, 150) }}...
                        </p>
                        <a href="{{ path('blog_show', {slug: post.slug}) }}" 
                           style="color: #2A4DD0; text-decoration: none; font-weight: bold; display: inline-flex; align-items: center; gap: 5px;">
                            Lire la suite <i class="fa fa-arrow-right"></i>
                        </a>
                    </div>
                </article>
                {% endfor %}
            </div>
        {% else %}
            <div style="text-align: center; padding: 60px 20px; background: #f8f9fa; border-radius: 10px;">
                <i class="fa fa-folder-open" style="font-size: 48px; color: #ccc; margin-bottom: 20px;"></i>
                <h3 style="color: #666; margin-bottom: 15px;">Aucun article dans cette catégorie</h3>
                <p style="color: #999; margin-bottom: 25px;">Les articles de cette catégorie seront bientôt disponibles.</p>
                <a href="{{ path('blog_index') }}" 
                   style="background: #2A4DD0; color: white; padding: 12px 25px; border-radius: 25px; text-decoration: none; font-weight: bold;">
                    Voir tous les articles
                </a>
            </div>
        {% endif %}
    </div>

    <!-- Sidebar -->
    <aside class="blog-sidebar">
        <!-- Autres catégories -->
        {% if categories|length > 0 %}
        <div class="sidebar-section" style="margin-bottom: 40px;">
            <h3 style="color: #2A4DD0; margin-bottom: 20px; font-size: 20px; border-bottom: 2px solid #2A4DD0; padding-bottom: 10px;">
                <i class="fa fa-folder"></i> Autres catégories
            </h3>
            <ul style="list-style: none; padding: 0;">
                {% for cat in categories %}
                {% if cat.slug != category.slug %}
                <li style="margin-bottom: 10px;">
                    <a href="{{ path('blog_category', {slug: cat.slug}) }}" 
                       style="color: #333; text-decoration: none; display: flex; justify-content: space-between; align-items: center; padding: 8px 0; border-bottom: 1px solid #eee;">
                        <span>{{ cat.name }}</span>
                        <span style="background: #2A4DD0; color: white; padding: 2px 8px; border-radius: 10px; font-size: 12px;">
                            {{ cat.postCount }}
                        </span>
                    </a>
                </li>
                {% endif %}
                {% endfor %}
            </ul>
        </div>
        {% endif %}

        <!-- Retour au blog -->
        <div class="sidebar-section" style="background: linear-gradient(135deg, #2A4DD0 0%, #1a3ba8 100%); color: white; padding: 30px; border-radius: 10px; text-align: center;">
            <h3 style="margin-bottom: 15px; font-size: 20px;">Voir tous les articles</h3>
            <p style="margin-bottom: 20px; font-size: 14px; line-height: 1.5;">
                Découvrez tous nos conseils et actualités sur le développement web.
            </p>
            <a href="{{ path('blog_index') }}" 
               style="background: white; color: #2A4DD0; padding: 12px 25px; border-radius: 25px; text-decoration: none; font-weight: bold; display: inline-block;">
                Tous les articles
            </a>
        </div>
    </aside>
</div>
{% endblock %}
