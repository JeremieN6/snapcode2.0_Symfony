{% extends 'blog/base_blog.html.twig' %}

{% block title %}Catégorie {{theCategoryPost.name}} | Le Blog - SnapCode™ Agency{% endblock %}

{% block body %}
<div class="cs-site-content cs-sidebar-disabled">
  <div class="cs-container">
    <div class="cs-breadcrumbs" id="breadcrumbs">
      <span>
        <span>
          <a href="{{ path('blog_index') }}">Accueil</a>
        </span>
        <span class="cs-separator"></span>
        <span class="breadcrumb_last" aria-current="page">{{ theCategoryPost.name }}</span>
      </span>
    </div>
    <div id="content" class="cs-main-content">
      <div id="primary" class="cs-content-area">
        <div class="cs-page__header cs-page__header-has-description">
          <h1 class="cs-page__title">{{ theCategoryPost.name }}</h1>
          <div class="cs-page__archive-description">
            <p>{{ theCategoryPost.description|raw }}</p>
          </div>
          <div class="cs-page__archive-count"> {{ postCount }} posts</div>
        </div>
        <div class="cs-posts-area cs-posts-area-posts" data-init="true">
          <div class="cs-posts-area__outer">
            <div class="cs-posts-area__main cs-archive-grid  cs-posts-area__archive cs-posts-area__grid">
              {% for post in postsList %}
              <article class="post-2090 post type-post status-publish format-standard has-post-thumbnail category-trends cs-entry">
                <div class="cs-entry__outer">
                  <div class="cs-entry__inner cs-entry__thumbnail cs-entry__overlay cs-overlay-ratio cs-ratio-landscape" data-scheme="inverse">
                    <div class="cs-overlay-background">
                      <img width="512" height="384" src="{{ post.featuredImage }}" class="attachment-csco-thumbnail size-csco-thumbnail wp-post-image" alt="From Athleisure to Workleisure: Response to Remote Work" decoding="async" fetchpriority="high" srcset="{{ post.featuredImage }} 512w, {{ post.featuredImage }} 1024w" sizes="(max-width: 512px) 100vw, 512px">
                    </div>
                    <a class="cs-overlay-link" href="{{ path('article_show', {slug: post.slug}) }}" title="{{post.title}}"></a>
                  </div>
                  <div class="cs-entry__inner cs-entry__content">
                    <div class="cs-entry__post-meta">
                      <div class="cs-meta-author">
                        <span class="cs-meta-author-by">Par</span>
                        <a class="cs-meta-author-link url fn n" href="#">
                          <span class="cs-meta-author-name">{{ post.users.prenom }} {{post.users.nom}} </span>
                        </a>
                      </div>
                      <div class="cs-meta-date">{{ post.createdAt|date('d F Y') }}</div>
                    </div>
                    <h2 class="cs-entry__title">
                      <a href="{{ path('article_show', {slug: post.slug}) }}">
                        <span>{{ post.title }}</span>
                      </a>
                    </h2>
                    <div class="cs-entry__post-meta">
                      <div class="cs-meta-category">
                        <ul class="post-categories">
                          <li>
                            <a href="{{ path('app_category', { slug: theCategoryPost.slug }) }}" rel="category tag">{{ theCategoryPost.name }}</a>
                          </li>
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
              </article>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}