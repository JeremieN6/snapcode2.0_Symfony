{% extends 'blog/base_blog.html.twig' %}

{% block title %}{{ post.metaTitle ? post.metaTitle : post.title ~ ' - Blog SnapCode™ Agency' }}{% endblock %}

{% block meta_description %}{{ post.metaDescription ? post.metaDescription : (post.content|striptags|slice(0, 160)) }}{% endblock %}

{% block meta_keywords %}{{ post.keywords|map(k => k.name)|join(', ') }}{% if post.keywords|length > 0 %}, {% endif %}développement web, création site internet, SnapCode{% endblock %}

{% block og_type %}article{% endblock %}
{% block og_title %}{{ post.title }}{% endblock %}
{% block og_description %}{{ post.metaDescription ? post.metaDescription : (post.content|striptags|slice(0, 160)) }}{% endblock %}
{% block og_image %}{{ post.featuredImage ? post.featuredImage : asset('assets/images/brand-logo.svg') }}{% endblock %}

{% block twitter_title %}{{ post.title }}{% endblock %}
{% block twitter_description %}{{ post.metaDescription ? post.metaDescription : (post.content|striptags|slice(0, 160)) }}{% endblock %}
{% block twitter_image %}{{ post.featuredImage ? post.featuredImage : asset('assets/images/brand-logo.svg') }}{% endblock %}

{% block body %}
<!-- Breadcrumb -->
<nav style="margin-bottom: 30px; padding: 15px 0; background: #f8f9fa; border-radius: 8px;">
    <div style="padding: 0 20px;">
        <a href="{{ path('app_home') }}" style="color: #2A4DD0; text-decoration: none;">Accueil</a>
        <span style="margin: 0 10px; color: #666;">/</span>
        <a href="{{ path('blog_index') }}" style="color: #2A4DD0; text-decoration: none;">Blog</a>
        {% if post.categories|length > 0 %}
        <span style="margin: 0 10px; color: #666;">/</span>
        <a href="{{ path('blog_category', {slug: post.categories|first.slug}) }}" style="color: #2A4DD0; text-decoration: none;">
            {{ post.categories|first.name }}
        </a>
        {% endif %}
        <span style="margin: 0 10px; color: #666;">/</span>
        <span style="color: #666;">{{ post.title }}</span>
    </div>
</nav>

<div class="blog-grid">
    <!-- Article principal -->
    <article class="main-content">
        <div style="background: white; border-radius: 10px; box-shadow: 0 4px 15px rgba(0,0,0,0.1); overflow: hidden;">
            <!-- Image en vedette -->
            {% if post.featuredImage %}
            <div class="featured-image" style="height: 400px; background-image: url('{{ post.featuredImage }}'); background-size: cover; background-position: center; position: relative;">
                <div style="position: absolute; bottom: 0; left: 0; right: 0; background: linear-gradient(transparent, rgba(0,0,0,0.7)); padding: 40px 30px 30px;">
                    <h1 style="color: white; font-size: 32px; line-height: 1.2; margin: 0; text-shadow: 2px 2px 4px rgba(0,0,0,0.5);">
                        {{ post.title }}
                    </h1>
                </div>
            </div>
            {% else %}
            <div style="padding: 40px 30px 20px;">
                <h1 style="color: #2A4DD0; font-size: 32px; line-height: 1.2; margin: 0;">
                    {{ post.title }}
                </h1>
            </div>
            {% endif %}

            <!-- Métadonnées de l'article -->
            <div style="padding: 30px; border-bottom: 1px solid #eee;">
                <div class="article-meta" style="display: flex; flex-wrap: wrap; gap: 20px; align-items: center; color: #666; font-size: 14px;">
                    <div style="display: flex; align-items: center; gap: 8px;">
                        <i class="fa fa-calendar"></i>
                        <span>{{ post.createdAt|date('d F Y') }}</span>
                    </div>
                    
                    {% if post.users %}
                    <div style="display: flex; align-items: center; gap: 8px;">
                        <i class="fa fa-user"></i>
                        <span>Par {{ post.users.prenom }} {{ post.users.nom }}</span>
                    </div>
                    {% endif %}

                    {% if post.categories|length > 0 %}
                    <div style="display: flex; align-items: center; gap: 8px;">
                        <i class="fa fa-folder"></i>
                        {% for category in post.categories %}
                        <a href="{{ path('blog_category', {slug: category.slug}) }}" 
                           style="color: #2A4DD0; text-decoration: none; background: #e3f2fd; padding: 4px 12px; border-radius: 15px; font-size: 12px;">
                            {{ category.name }}
                        </a>
                        {% endfor %}
                    </div>
                    {% endif %}

                    {% if post.keywords|length > 0 %}
                    <div style="display: flex; align-items: center; gap: 8px; flex-wrap: wrap;">
                        <i class="fa fa-tags"></i>
                        {% for keyword in post.keywords %}
                        <span style="background: #f0f0f0; color: #666; padding: 2px 8px; border-radius: 10px; font-size: 11px;">
                            {{ keyword.name }}
                        </span>
                        {% endfor %}
                    </div>
                    {% endif %}
                </div>
            </div>

            <!-- Contenu de l'article -->
            <div style="padding: 40px 30px;">
                <div class="article-content" style="line-height: 1.8; color: #333; font-size: 16px;">
                    {{ post.content|raw }}
                </div>

                <!-- Partage social -->
                <div style="margin-top: 40px; padding-top: 30px; border-top: 1px solid #eee;">
                    <h3 style="color: #2A4DD0; margin-bottom: 20px; font-size: 18px;">Partager cet article</h3>
                    <div style="display: flex; gap: 15px; flex-wrap: wrap;">
                        <a href="https://www.facebook.com/sharer/sharer.php?u={{ app.request.uri|url_encode }}" 
                           target="_blank" 
                           style="background: #3b5998; color: white; padding: 10px 20px; border-radius: 5px; text-decoration: none; display: inline-flex; align-items: center; gap: 8px;">
                            <i class="fa fa-facebook"></i> Facebook
                        </a>
                        <a href="https://twitter.com/intent/tweet?url={{ app.request.uri|url_encode }}&text={{ post.title|url_encode }}" 
                           target="_blank"
                           style="background: #1da1f2; color: white; padding: 10px 20px; border-radius: 5px; text-decoration: none; display: inline-flex; align-items: center; gap: 8px;">
                            <i class="fa fa-twitter"></i> Twitter
                        </a>
                        <a href="https://www.linkedin.com/sharing/share-offsite/?url={{ app.request.uri|url_encode }}" 
                           target="_blank"
                           style="background: #0077b5; color: white; padding: 10px 20px; border-radius: 5px; text-decoration: none; display: inline-flex; align-items: center; gap: 8px;">
                            <i class="fa fa-linkedin"></i> LinkedIn
                        </a>
                        <button onclick="copyToClipboard('{{ app.request.uri }}')"
                                style="background: #666; color: white; padding: 10px 20px; border-radius: 5px; border: none; cursor: pointer; display: inline-flex; align-items: center; gap: 8px;">
                            <i class="fa fa-copy"></i> Copier le lien
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Articles similaires -->
        {% if relatedPosts|length > 0 %}
        <section style="margin-top: 50px;">
            <h2 style="color: #2A4DD0; margin-bottom: 30px; font-size: 24px;">
                <i class="fa fa-newspaper-o"></i> Articles similaires
            </h2>
            <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 20px;">
                {% for relatedPost in relatedPosts|slice(0, 3) %}
                <article class="blog-post-card">
                    {% if relatedPost.featuredImage %}
                    <div style="height: 150px; background-image: url('{{ relatedPost.featuredImage }}'); background-size: cover; background-position: center;"></div>
                    {% endif %}
                    <div style="padding: 20px;">
                        <h3 style="margin-bottom: 10px; font-size: 16px; line-height: 1.3;">
                            <a href="{{ path('blog_show', {slug: relatedPost.slug}) }}" style="color: #333; text-decoration: none;">
                                {{ relatedPost.title }}
                            </a>
                        </h3>
                        <p style="color: #666; font-size: 14px; margin-bottom: 15px;">
                            {{ relatedPost.content|striptags|slice(0, 100) }}...
                        </p>
                        <a href="{{ path('blog_show', {slug: relatedPost.slug}) }}" 
                           style="color: #2A4DD0; text-decoration: none; font-weight: bold; font-size: 14px;">
                            Lire la suite <i class="fa fa-arrow-right"></i>
                        </a>
                    </div>
                </article>
                {% endfor %}
            </div>
        </section>
        {% endif %}
    </article>

    <!-- Sidebar -->
    <aside class="blog-sidebar">
        <!-- Catégories -->
        {% if categories|length > 0 %}
        <div class="sidebar-section" style="margin-bottom: 40px;">
            <h3 style="color: #2A4DD0; margin-bottom: 20px; font-size: 18px; border-bottom: 2px solid #2A4DD0; padding-bottom: 10px;">
                <i class="fa fa-folder"></i> Catégories
            </h3>
            <ul style="list-style: none; padding: 0;">
                {% for category in categories %}
                <li style="margin-bottom: 8px;">
                    <a href="{{ path('blog_category', {slug: category.slug}) }}" 
                       style="color: #333; text-decoration: none; display: flex; justify-content: space-between; align-items: center; padding: 6px 0; border-bottom: 1px solid #eee; font-size: 14px;">
                        <span>{{ category.name }}</span>
                        <span style="background: #2A4DD0; color: white; padding: 2px 6px; border-radius: 8px; font-size: 11px;">
                            {{ category.postCount }}
                        </span>
                    </a>
                </li>
                {% endfor %}
            </ul>
        </div>
        {% endif %}

        <!-- Call to action -->
        <div class="sidebar-section" style="background: linear-gradient(135deg, #2A4DD0 0%, #1a3ba8 100%); color: white; padding: 25px; border-radius: 10px; text-align: center;">
            <h3 style="margin-bottom: 15px; font-size: 18px;">Besoin d'aide ?</h3>
            <p style="margin-bottom: 20px; font-size: 14px; line-height: 1.5;">
                Contactez-nous pour vos projets de développement web et création de sites internet.
            </p>
            <a href="{{ path('app_home') }}"
               style="background: white; color: #2A4DD0; padding: 10px 20px; border-radius: 20px; text-decoration: none; font-weight: bold; display: inline-block; font-size: 14px;">
                Voir nos services
            </a>
        </div>
    </aside>
</div>
{% endblock %}

{% block structured_data %}
{{ parent() }}
<script type="application/ld+json">
{
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "headline": "{{ post.title }}",
    "description": "{{ post.metaDescription ? post.metaDescription : (post.content|striptags|slice(0, 160)) }}",
    "image": "{{ post.featuredImage ? post.featuredImage : asset('assets/images/brand-logo.svg') }}",
    "author": {
        "@type": "Person",
        "name": "{{ post.users ? post.users.prenom ~ ' ' ~ post.users.nom : 'SnapCode™ Agency' }}"
    },
    "publisher": {
        "@type": "Organization",
        "name": "SnapCode™ Agency",
        "logo": {
            "@type": "ImageObject",
            "url": "{{ asset('assets/images/brand-logo.svg') }}"
        }
    },
    "datePublished": "{{ post.createdAt|date('c') }}",
    "dateModified": "{{ post.updatedAt|date('c') }}",
    "mainEntityOfPage": {
        "@type": "WebPage",
        "@id": "{{ app.request.uri }}"
    }
}
</script>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
function copyToClipboard(text) {
    navigator.clipboard.writeText(text).then(function() {
        alert('Lien copié dans le presse-papiers !');
    }, function(err) {
        console.error('Erreur lors de la copie : ', err);
    });
}
</script>
{% endblock %}
