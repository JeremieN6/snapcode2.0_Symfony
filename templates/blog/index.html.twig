{% extends 'blog/base_blog.html.twig' %}

{% block title %}Blog SnapCode™ Agency - Conseils développement web et création de sites{% endblock %}

{% block meta_description %}Découvrez nos conseils d'experts en développement web, création de sites internet et landing pages. Actualités, tutoriels et bonnes pratiques SEO.{% endblock %}

{% block meta_keywords %}blog développement web, conseils création site internet, tutoriels landing page, SEO, Franconville, SnapCode{% endblock %}

{% block body %}
<div class="blog-header">
    <h1>Blog SnapCode™ Agency</h1>
    <p>Conseils d'experts en développement web et création de sites internet</p>
    
    <!-- Barre de recherche -->
    <div class="search-container" style="margin-top: 30px;">
        <form action="{{ path('blog_search') }}" method="GET" style="display: flex; justify-content: center; gap: 10px;">
            <input type="text" name="q" placeholder="Rechercher un article..." 
                   style="padding: 12px 20px; border: none; border-radius: 25px; width: 300px; font-size: 16px;"
                   value="{{ app.request.query.get('q', '') }}">
            <button type="submit" style="padding: 12px 25px; background: #fff; color: #2A4DD0; border: none; border-radius: 25px; font-weight: bold; cursor: pointer;">
                <i class="fa fa-search"></i> Rechercher
            </button>
        </form>
    </div>
</div>

<div class="blog-grid">
    <!-- Articles principaux -->
    <div class="main-content">
        {% if posts|length > 0 %}
            <!-- Articles en vedette -->
            {% if favoritePosts|length > 0 %}
            <section class="featured-posts" style="margin-bottom: 50px;">
                <h2 style="color: #2A4DD0; margin-bottom: 30px; font-size: 28px;">
                    <i class="fa fa-star"></i> Articles en vedette
                </h2>
                <div class="featured-grid" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 20px;">
                    {% for post in favoritePosts %}
                    <article class="blog-post-card featured">
                        {% if post.featuredImage %}
                        <div class="post-image" style="height: 200px; background-image: url('{{ post.featuredImage }}'); background-size: cover; background-position: center; position: relative;">
                            <div style="position: absolute; top: 10px; right: 10px; background: #ff6b35; color: white; padding: 5px 10px; border-radius: 15px; font-size: 12px; font-weight: bold;">
                                <i class="fa fa-star"></i> Vedette
                            </div>
                        </div>
                        {% endif %}
                        <div style="padding: 25px;">
                            <div class="post-meta" style="margin-bottom: 15px; color: #666; font-size: 14px;">
                                <span><i class="fa fa-calendar"></i> {{ post.createdAt|date('d F Y') }}</span>
                                {% if post.categories|length > 0 %}
                                <span style="margin-left: 15px;">
                                    <i class="fa fa-folder"></i> 
                                    <a href="{{ path('blog_category', {slug: post.categories|first.slug}) }}" style="color: #2A4DD0; text-decoration: none;">
                                        {{ post.categories|first.name }}
                                    </a>
                                </span>
                                {% endif %}
                            </div>
                            <h3 style="margin-bottom: 15px; font-size: 20px; line-height: 1.4;">
                                <a href="{{ path('blog_show', {slug: post.slug}) }}" style="color: #333; text-decoration: none;">
                                    {{ post.title }}
                                </a>
                            </h3>
                            <p style="color: #666; line-height: 1.6; margin-bottom: 20px;">
                                {{ post.content|striptags|slice(0, 150) }}...
                            </p>
                            <a href="{{ path('blog_show', {slug: post.slug}) }}" 
                               style="color: #2A4DD0; text-decoration: none; font-weight: bold; display: inline-flex; align-items: center; gap: 5px;">
                                Lire la suite <i class="fa fa-arrow-right"></i>
                            </a>
                        </div>
                    </article>
                    {% endfor %}
                </div>
            </section>
            {% endif %}

            <!-- Tous les articles -->
            <section class="all-posts">
                <h2 style="color: #2A4DD0; margin-bottom: 30px; font-size: 28px;">
                    <i class="fa fa-newspaper-o"></i> Tous les articles
                </h2>
                <div class="blog-posts">
                    {% for post in posts %}
                    <article class="blog-post-card">
                        {% if post.featuredImage %}
                        <div class="post-image" style="height: 200px; background-image: url('{{ post.featuredImage }}'); background-size: cover; background-position: center;">
                        </div>
                        {% endif %}
                        <div style="padding: 25px;">
                            <div class="post-meta" style="margin-bottom: 15px; color: #666; font-size: 14px;">
                                <span><i class="fa fa-calendar"></i> {{ post.createdAt|date('d F Y') }}</span>
                                {% if post.categories|length > 0 %}
                                <span style="margin-left: 15px;">
                                    <i class="fa fa-folder"></i> 
                                    <a href="{{ path('blog_category', {slug: post.categories|first.slug}) }}" style="color: #2A4DD0; text-decoration: none;">
                                        {{ post.categories|first.name }}
                                    </a>
                                </span>
                                {% endif %}
                            </div>
                            <h3 style="margin-bottom: 15px; font-size: 20px; line-height: 1.4;">
                                <a href="{{ path('blog_show', {slug: post.slug}) }}" style="color: #333; text-decoration: none;">
                                    {{ post.title }}
                                </a>
                            </h3>
                            <p style="color: #666; line-height: 1.6; margin-bottom: 20px;">
                                {{ post.content|striptags|slice(0, 150) }}...
                            </p>
                            <a href="{{ path('blog_show', {slug: post.slug}) }}" 
                               style="color: #2A4DD0; text-decoration: none; font-weight: bold; display: inline-flex; align-items: center; gap: 5px;">
                                Lire la suite <i class="fa fa-arrow-right"></i>
                            </a>
                        </div>
                    </article>
                    {% endfor %}
                </div>
            </section>
        {% else %}
            <div style="text-align: center; padding: 60px 20px; background: #f8f9fa; border-radius: 10px;">
                <i class="fa fa-newspaper-o" style="font-size: 48px; color: #ccc; margin-bottom: 20px;"></i>
                <h3 style="color: #666; margin-bottom: 15px;">Aucun article disponible</h3>
                <p style="color: #999;">Les premiers articles seront bientôt publiés. Revenez nous voir !</p>
            </div>
        {% endif %}
    </div>

    <!-- Sidebar -->
    <aside class="blog-sidebar">
        <!-- Catégories -->
        {% if categories|length > 0 %}
        <div class="sidebar-section" style="margin-bottom: 40px;">
            <h3 style="color: #2A4DD0; margin-bottom: 20px; font-size: 20px; border-bottom: 2px solid #2A4DD0; padding-bottom: 10px;">
                <i class="fa fa-folder"></i> Catégories
            </h3>
            <ul style="list-style: none; padding: 0;">
                {% for category in categories %}
                <li style="margin-bottom: 10px;">
                    <a href="{{ path('blog_category', {slug: category.slug}) }}" 
                       style="color: #333; text-decoration: none; display: flex; justify-content: space-between; align-items: center; padding: 8px 0; border-bottom: 1px solid #eee;">
                        <span>{{ category.name }}</span>
                        <span style="background: #2A4DD0; color: white; padding: 2px 8px; border-radius: 10px; font-size: 12px;">
                            {{ category.postCount }}
                        </span>
                    </a>
                </li>
                {% endfor %}
            </ul>
        </div>
        {% endif %}

        <!-- Articles récents -->
        {% if recentPosts|length > 0 %}
        <div class="sidebar-section">
            <h3 style="color: #2A4DD0; margin-bottom: 20px; font-size: 20px; border-bottom: 2px solid #2A4DD0; padding-bottom: 10px;">
                <i class="fa fa-clock-o"></i> Articles récents
            </h3>
            {% for post in recentPosts %}
            <div style="margin-bottom: 20px; padding-bottom: 20px; border-bottom: 1px solid #eee;">
                <h4 style="margin-bottom: 8px; font-size: 16px; line-height: 1.3;">
                    <a href="{{ path('blog_show', {slug: post.slug}) }}" style="color: #333; text-decoration: none;">
                        {{ post.title }}
                    </a>
                </h4>
                <p style="color: #666; font-size: 14px; margin-bottom: 5px;">
                    <i class="fa fa-calendar"></i> {{ post.createdAt|date('d M Y') }}
                </p>
            </div>
            {% endfor %}
        </div>
        {% endif %}

        <!-- Call to action -->
        <div class="sidebar-section" style="background: linear-gradient(135deg, #2A4DD0 0%, #1a3ba8 100%); color: white; padding: 30px; border-radius: 10px; text-align: center;">
            <h3 style="margin-bottom: 15px; font-size: 20px;">Besoin d'un site web ?</h3>
            <p style="margin-bottom: 20px; font-size: 14px; line-height: 1.5;">
                Découvrez nos services de création de sites internet et landing pages sur-mesure.
            </p>
            <a href="{{ path('app_home') }}" 
               style="background: white; color: #2A4DD0; padding: 12px 25px; border-radius: 25px; text-decoration: none; font-weight: bold; display: inline-block;">
                Voir nos services
            </a>
        </div>
    </aside>
</div>
{% endblock %}
