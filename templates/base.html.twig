    <!-- Mobile specific metas -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@SnapCode™">
