    <title>{% block title %}SnapCode™ Agency{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
    <!-- Icon fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,500i,700,700i,900" rel="stylesheet">

    <!-- css links -->

    <!-- Owl Carousel -->
    <link rel="stylesheet" type="text/css" href="{{ asset('V1/assets/css/vendor/owl.carousel.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('V1/assets/css/vendor/owl.theme.default.min.css') }}">

    <!-- Magnific popup -->
    <link rel="stylesheet" type="text/css" href="{{ asset('V1/assets/css/vendor/magnific-popup.css') }}">

    <!-- Custom styles -->
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/style/style.css') }}">

    <!-- Load Flashy default CSS -->
    <link rel="stylesheet" href="{{ asset('./bundles/mercuryseriesflashy/css/flashy.css') }}">

    <!--Message Flash Icon-->
    <link href="//fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- ICONS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    {% endblock %}

</head>

<body>
    {% include 'header.html.twig' %}

    {% if app.user and app.user.isVerified == false %}
    <div class="flashy flashy--warning">
        <i class="material-icons">speaker_notes</i>
        <strong>Bonjour, {{app.user.prenom}}</strong>, <br> votre compte n'est pas encore activé. <br> Un lien d'activation vous a été envoyé par mail.<br>
        <a class="flashy__body" href="{{path('resend_verif')}}" target="_blank">Pas de lien ? <strong>Renvoyez le lien d'activation.</strong></a>
    </div>
    {% endif %}

    <main class="container" id="mainPage">
        {% block body %}{% endblock %}
    </main>

    <!-- Début de widget de badge Calendly -->
    <link href="https://assets.calendly.com/assets/external/widget.css" rel="stylesheet">
    <script src="https://assets.calendly.com/assets/external/widget.js" type="text/javascript" async></script>
    <script type="text/javascript">window.onload = function() { Calendly.initBadgeWidget({ url: 'https://calendly.com/ngoyi-jeremie-pro/appel-d-information-jeremiecode-1er-contact?hide_gdpr_banner=1', text: 'PRENDRE UN RDV', color: '#2A4DD0', textColor: '#ffffff', branding: undefined }); }</script>
    <!-- Fin de widget de badge Calendly -->

    {% include 'footer.html.twig' %}

    {% block javascripts %}
        <!-- jQuery -->
        {#<script src="{{ asset('assets/js/vendor/jquery.min.js') }}"></script>
        <script src="{{ asset('assets/js/vendor/jquery-migrate.min.js') }}"></script>#}
        <!-- Charger jQuery en premier -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

        <!-- Charger le JavaScript de Bootstrap après jQuery -->
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

        <!-- jQuery Easing Plugin -->
        {#<script src="{{ asset('assets/js/vendor/easing-1.3.js') }}"></script>#}
        <!-- Magnific popup -->
        {#<script src="{{ asset('assets/js/vendor/jquery.magnific-popup.min.js') }}"></script>#}
        <!-- Custom Script -->
        <script src="{{ asset('assets/js/script.js') }}"></script>
        <!-- Load Flashy default JavaScript -->
        <script src="{{ asset('./bundles/mercuryseriesflashy/js/flashy.js') }}"></script>
    {% endblock %}
        <!-- Include Flashy default partial -->
        {{ include('@MercurySeriesFlashy/flashy.html.twig') }}
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                $(".my-alert").alert('my-close-button')
            });
        </script>
</body>

</html>
